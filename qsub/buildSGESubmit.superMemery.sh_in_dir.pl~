#!/usr/bin/perl -w

use strict;
use warnings;

my($fileIn,$mem)=@ARGV;
die("usage: inCmd mem \n")unless($mem);
#ProjectNum[ CATwiwR(cattle) or AEAInte(test) or st_supermem] queue[bc.q OR bc_supermem.q]\n")unless($proj_num);

$fileIn=~/\/([^\/]+)$/;
my $name="z.$1";
my $dirout="z.$1";


mkdir($dirout)unless(-e $dirout);

my @cmd;
open(F,'<',$fileIn) or die("$!: $fileIn\n");
while(<F>){
    chomp;
    push(@cmd,$_);
}
close(F);

my $i=0;
foreach my $cmd(@cmd){
    $i++;
    my $fileOut="$dirout/$name-$i.pbs";
    open(Fo,'>',$fileOut) or die("$!: $fileOut\n");
print Fo "
#\$ -S /bin/sh
#\$ -e $dirout/$name-$i.\$JOB_ID.err
#\$ -o $dirout/$name-$i.\$JOB_ID.out
#\$ -l vf=${mem}G
#\$ -m n
#\$ -cwd
#\$ -P st_supermem
#\$ -q supermem.q
";
    my $pwd=`pwd`;
    chomp $pwd;
    print Fo "cd $pwd\n";
    print Fo "$cmd\n\n";
    close(Fo);
}
